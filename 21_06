/* Функция, която намира брой цифри в едно цяло число. 
Програма, която чете число и извежда броят цифри в него*/
#include <stdio.h>
int num(int a)
{
   int i=0;
   do {
        a=a/10;
        i++;
      } while( a > 0 );
return i;
}
////////
int main()
{
    int X;
    printf("Enter the number:\t");
    scanf("%d", &X);
    printf("%d", num(X));
}
-------------------------------------------------
/*1 Функция, която по зададено цяло число n, намира сумата на числата от 1 
до n. Програмата извиква тази функция за определено цяло число и 
отпечатва резултата.*/

#include <stdio.h>
int sSum(int n)
{
    int i;
    int sum=0;
    
    for(i=0;i<=n;i++)
    {
        sum=sum+i;
    }
    return sum;
}

int main()
{
    int nNum;
    scanf("%d", &nNum);
    printf("%d",sSum(nNum));
    return 0;
}
