//Числата на Фибоначи

#include <stdio.h>
int main()
{
    int br;
    int i;
    printf("How many numbers do you want to enter?");
    scanf("%d", &br);
    
    int N1=0;
    int N2=1;
    int nsum;
    for(i=0;i<br;i++)
    {
        nsum=N1+N2;
        N1=N2;
        N2=nsum;
        printf("%d\t",nsum);
    }
return 0;
    
}
