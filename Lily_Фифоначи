//Потребителя въвежда година,а програмата казва дали е високосна

#include <stdio.h>
int main()
{
    int yYear;
    printf("Enter the Year:\t");
    scanf("%d",&yYear);

    
   
    if(yYear%4==0)
    {
        printf("Yes, the year is Leap Year ");
    }

    else 
    {
      printf("No, the year is'n Leap Year ");  
    }
return 0;
    
}
