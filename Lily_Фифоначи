#include <stdio.h>
int main()
{
    int aAge;
    float pToy;
    float pLaundry;

    printf("Enter Age for Lilly:\t");
    scanf("%d", &aAge);
    printf("How cost one toy:\t");
    scanf("%f", &pToy);
    
    // i = i + 2;
    // i += 2;
    float total=0;
    int i;
    for(i=1;i<=aAge; i++)
    {
        if(i%2==0)
        {
           //total=i*5-1;
           total= total + i*5-1;
           
        }
    
        else
        {
            total=total+pToy;
        }
    }
  printf("How cost the Laundry:\t");
  scanf("%f",&pLaundry);
  
  if(total>=pLaundry)
  { 
      printf("yes\n");
  }
  else
  {
      printf("no\n");
  }
  return 0;   
    
}
